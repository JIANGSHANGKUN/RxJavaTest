<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps.android.news.rxjavatest.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/subscribe_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="subscribe"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/custom_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="customAction"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/example1_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="example1"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/schedules_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="schedules_btn"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/transfer_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="transfer_btn"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/transfer2_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="transfer2_btn"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/schedules2_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="changeThread"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/test1_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test1"
        android:textAllCaps="false" />

</LinearLayout>
